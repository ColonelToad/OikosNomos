# Copy this file to .env and fill in your values

# OpenAI API Key (required for RAG service)
OPENAI_API_KEY=sk-...

# Optional: Use Anthropic Claude instead
# ANTHROPIC_API_KEY=sk-ant-...
# LLM_PROVIDER=anthropic  # or "openai" (default)

# Database (defaults are fine for development)
DB_HOST=timescaledb
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=oikosnomo_dev
DB_NAME=oikosnomo

# MQTT Broker
MQTT_BROKER=mosquitto:1883
MQTT_CLIENT_ID=oikosnomo_client

# Service URLs (for inter-service communication)
FORECAST_SERVICE_URL=http://forecast-service:8000
SCENARIO_SERVICE_URL=http://scenario-service:8000
BILLING_ENGINE_URL=http://billing-engine:8080
